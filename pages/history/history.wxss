  z-index: 1;
}
.img{
  width: 600rpx;
  height: 400rpx;
  background-size: 100% 100%;
  position:absolute;
}

  .button {
    width: 200rpx;
    height: 60rpx;
    background: linear-gradient(to bottom, #4eb5e5 0%,#389ed5 100%);
    border: none;
    border-radius: 10rpx;
    display: inline-block;
    border-bottom: 8rpx solid #2b8bc6;
    color: #fbfbfb;
    font-weight: 600;
    font-family: 'Open Sans', sans-serif;
    text-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,.4);
    font-size: 30rpx;
    text-align: left;
    text-indent: 10rpx;
    box-shadow: 0px 3px 0px 0px rgba(0,0,0,.2);
    cursor: pointer;
    margin: 0 0 0 12rpx;
    position:absolute;
    bottom: 0rpx;
    left: -10rpx;

  }
  .button1 {
    width: 200rpx;
    height: 60rpx;
    background: linear-gradient(to bottom, #4eb5e5 0%,#389ed5 100%);
    border: none;
    border-radius: 10rpx;
    display: inline-block;
    border-bottom: 8rpx solid #2b8bc6;
    color: #fbfbfb;
    font-weight: 600;
    font-family: 'Open Sans', sans-serif;
    text-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,.4);
    font-size: 30rpx;
    text-align: left;
    text-indent: 10rpx;
    box-shadow: 0rpx 6rpx 0rpx 0rpx rgba(0,0,0,.2);
    cursor: pointer;
    position:absolute;
    bottom: 0rpx;
    right:0rpx;
  }
  .button:active {
    box-shadow: 0rpx 4rpx 0rpx 0rpx rgba(0,0,0,.2);
  }

  .button:after {
    content: "";
    width: 0;
    height: 0;
    display: block;
    border-left: 32rpx solid transparent;
    position: absolute;
    opacity: 0.6; 
    right: 0;
    top: 0;
    border-radius: 0 10rpx 10rpx 0;  
  }
  .time{
    width: 600rpx;
    height: 25rpx;
    background-color: rgba(143, 122, 122, 0);
    color: #131010;
    font-size: 25rpx;
    font-weight: 600;
    position:absolute;
    top: -35rpx;
  }